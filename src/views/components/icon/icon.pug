mixin icon(props = {})
  - const rootClassName = "icon";
  - const className = props.class || null;
  - const style = props.style || null;
  - const width = props.width || 24;
  - const height = props.height || 24;
  - const icon = props.icon || "arrow-left";
  -
    const classes = [
      rootClassName,
      {[`${rootClassName}:${icon}`]: icon},
      className
    ];

  span(
    class = classes 
    style = style
  )
    svg(
      class = `${rootClassName}__svg`
      viewbox="0 0 32 32"
      style=`width: ${width}px; height: ${height}px;`
    )
      use(xlink:href=`assets/images/icons.svg#${icon}`)